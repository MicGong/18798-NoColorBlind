<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jiangong.nocolorblind.activities.AnomTestActivity"
    android:background="@color/Ivory">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@color/DarkDarkGray"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="RGB Anomaloscope"
            android:textColor="@color/YellowGreen"
            android:textStyle="bold"
            android:textSize="20dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/testIntro_anom"
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:text="@string/test_intro_anom"/>

    <TextView
        android:id="@+id/image1_title"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testIntro_anom"
        android:layout_alignLeft="@+id/header"
        android:layout_marginLeft="20dp"
        android:text="Image 1"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/image1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/image1_title"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:background="@color/Black"/>

    <TextView
        android:id="@+id/image2_title"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image1"
        android:layout_alignLeft="@+id/header"
        android:layout_marginLeft="20dp"
        android:text="Image 2"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/image2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/image2_title"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:background="@color/Black"/>

    <SeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_below="@+id/image2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@color/LightSkyBlue"/>

    <Button
        android:id="@+id/prevBtn"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_below="@+id/seekBar"
        android:layout_alignLeft="@+id/header"
        android:text="Prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/YellowGreen"
        android:textColor="@color/White"/>

    <Button
        android:id="@+id/nextBtn"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:layout_below="@+id/seekBar"
        android:layout_alignRight="@+id/header"
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/YellowGreen"
        android:textColor="@color/White"/>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/DarkDarkGray"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="NoColorBlind"
            android:textColor="@color/YellowGreen"
            android:textSize="20sp" />
    </RelativeLayout>



</RelativeLayout>
