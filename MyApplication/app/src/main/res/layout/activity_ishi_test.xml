<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jiangong.nocolorblind.activities.IshiTestActivity"
    android:orientation="vertical"
    android:background="@color/Ivory">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@color/DarkDarkGray"
        android:gravity="center">

        <Button
            android:id="@+id/toMainBtn"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Return"
            android:textSize="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Ishihara Test"
            android:textColor="@color/YellowGreen"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_centerInParent="true" />

        <Button
            android:id="@+id/toAnomBtn"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Next"
            android:textSize="10dp" />
    </RelativeLayout>


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/testImageView"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/header"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ishihara_plate1"/>



    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_intro"
        android:textSize="18dp"
        android:id="@+id/textIntro"
        android:layout_below="@+id/testImageView"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/userInput"
        android:layout_below="@+id/textIntro"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/prevBtn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:layout_below="@+id/userInput"
        android:layout_alignLeft="@+id/header"
        android:text="Prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/YellowGreen"
        android:textColor="@color/White"/>

    <Button
        android:id="@+id/nextBtn"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:layout_below="@+id/userInput"
        android:layout_alignRight="@+id/header"
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/YellowGreen"
        android:textColor="@color/White"/>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/DarkDarkGray"
        android:gravity="center" >

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="NoColorBlind"
            android:textColor="@color/YellowGreen"
            android:textSize="20sp" />
    </RelativeLayout>



</RelativeLayout>
